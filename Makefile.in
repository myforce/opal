	( for fn in include/asn/*.h ; do \
		$(INSTALL) -m 644 $$fn $(DESTDIR)$(PREFIX)/include/opal/asn ; \
	done)
	( for fn in include/codec/*.h ; do \
		$(INSTALL) -m 644 $$fn $(DESTDIR)$(PREFIX)/include/opal/codec ; \
