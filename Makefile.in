		     $(DESTDIR)$(PREFIX)/lib/pkgconfig \
		     $(DESTDIR)$(PREFIX)/share/opal ;\
		do mkdir -p $$dir ; chmod 755 $$dir ; \
	done)
	$(INSTALL) -m 755 lib/$(LIBNAME_PAT) $(DESTDIR)@LIBDIR@
	$(INSTALL) -m 444 opal.pc $(DESTDIR)$(PREFIX)/lib/pkgconfig
