#ifndef _OPAL_BUILDOPTS_H
#define _OPAL_BUILDOPTS_H


/////////////////////////////////////////////////
//
// Protocol support
//

#undef	OPAL_SIP
#undef	OPAL_H323

#if !defined(OPAL_H323) || !OPAL_H323
#define NO_H323
#define NO_H323_AUDIO
#endif

/////////////////////////////////////////////////
//
// VoiceAge G.729 Support
//

#undef VOICE_AGE_G729A 

#if defined(_MSC_VER)

#if VOICE_AGE_G729A
#pragma include_alias("va_g729a.h", "@VOICE_AGE_DIR@/va_g729a.h")
#endif

#define VOICE_AGE_G729_LIBRARY "@VOICE_AGE_DIR@/va_g729a.lib"

#endif

/////////////////////////////////////////////////
//
// use system Speex

#undef	OPAL_SYSTEM_SPEEX


/////////////////////////////////////////////////
//
// ffmpeg H.263 Support
//

#undef H323_AVCODEC

#if defined(_MSC_VER)

#if H323_AVCODEC
#pragma include_alias(<avcodec.h>, <@H323_AVCODEC_DIR@/avcodec.h>)
#endif

#define H323_AVCODEC_DIR     "@H323_AVCODEC_DIR@/"

#ifdef _DEBUG
#define H323_AVCODEC_LIBDIR H323_AVCODEC_DIR "Debug"
#else
#define H323_AVCODEC_LIBDIR H323_AVCODEC_DIR "Release"
#endif

#define H323_AVCODEC_LIBRARY H323_AVCODEC_LIBDIR "/libavcodec.lib"

#endif


#endif // _OPAL_BUILDOPTS_H


