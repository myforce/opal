#ifndef _OPAL_BUILDOPTS_H
#define _OPAL_BUILDOPTS_H


/////////////////////////////////////////////////
//
// OPAL Version 
//

#undef OPAL_MAJOR
#undef OPAL_MINOR
#undef OPAL_BUILD
#undef OPAL_VERSION


/////////////////////////////////////////////////
//
// Protocol support
//

#undef  OPAL_IAX2
#undef	OPAL_SIP
#undef	OPAL_H323

#if !defined(OPAL_H323) || !OPAL_H323
#define NO_H323
#define NO_H323_AUDIO
#endif

/////////////////////////////////////////////////
//
// VoiceAge G.729 Support
//

#undef VOICE_AGE_G729A 

#if VOICE_AGE_G729A
#if defined(_MSC_VER)

#pragma include_alias("va_g729a.h", "@VOICE_AGE_DIR@/va_g729a.h")

#define VOICE_AGE_G729_LIBRARY "@VOICE_AGE_DIR@/va_g729a.lib"

#endif
#endif

/////////////////////////////////////////////////
//
// use system Speex

#undef	OPAL_SYSTEM_SPEEX
#undef  OPAL_HAVE_SPEEX_SPEEX_H


/////////////////////////////////////////////////
//
// ffmpeg H.263 Support
//

#undef H323_AVCODEC

#if H323_AVCODEC

#if defined(_MSC_VER)

#pragma include_alias(<avcodec.h>, <@H323_AVCODEC_DIR@/avcodec.h>)

#define H323_AVCODEC_DIR     "@H323_AVCODEC_DIR@/"

#ifdef _DEBUG
#define H323_AVCODEC_LIBDIR H323_AVCODEC_DIR "Debug"
#else
#define H323_AVCODEC_LIBDIR H323_AVCODEC_DIR "Release"
#endif

#define H323_AVCODEC_LIBRARY H323_AVCODEC_LIBDIR "/libavcodec.lib"

#endif
#endif


/////////////////////////////////////////////////
////
//// RFC 2190 compatible H.263
////

#undef RFC2190_AVCODEC

#if RFC2190_AVCODEC
#if defined(_MSC_VER)
#pragma include_alias(<avcodec.h>, <@RFC2190_AVCODEC_DIR@/avcodec.h>)
#define RFC2190_AVCODEC_DIR     "@RFC2190_AVCODEC_DIR@/"
#ifdef _DEBUG
#define RFC2190_AVCODEC_LIBDIR RFC2190_AVCODEC_DIR "Debug"
#else
#define RFC2190_AVCODEC_LIBDIR RFC2190_AVCODEC_DIR "Release"
#endif
#define RFC2190_AVCODEC_LIBRARY RFC2190_AVCODEC_LIBDIR "/libavcodec.lib"
#endif
#endif


/////////////////////////////////////////////////
//
// VoiceTronic VPB Support
//

#undef HAS_VPB

#if HAS_VPB
#if defined(_MSC_VER)

#pragma include_alias(<vpbapi.h>, <@VPB_DIR@/src/vpbapi.h>)

#define VPB_LIBRARY "@VPB_DIR@/win32/libvpb/Debug/libvpb.lib"

#endif
#endif

/////////////////////////////////////////////////
//
// Sangoma support
//
#undef HAS_SANGOMA


/////////////////////////////////////////////////
// Various other Line Interface Devices

#undef	HAS_IXJ
#undef  HAS_VBLASTER


#endif // _OPAL_BUILDOPTS_H


// End Of File ///////////////////////////////////////////////////////////////
