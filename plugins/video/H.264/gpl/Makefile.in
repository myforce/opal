VC_PLUGIN_DIR=@VC_PLUGIN_DIR@
prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@

SHAREDDIR	= ../shared
COMMONDIR       = ../../common
PLUGINDIR       = ../../../
OBJDIR := $(PLUGINDIR)/../lib_@OSTYPE@_@MACHTYPE@/plugins/h264_x264_gpl

CC	 	=@CC@
CXX	 	=@CXX@
CFLAGS	 	=@X264_CFLAGS@ -I$(COMMONDIR) -I$(PLUGINDIR) -I.. -DGPL_HELPER_APP # -DPTRACING
LDFLAGS		=@LDFLAGS@ @X264_LIBS@


vpath	%.cxx $(SHAREDDIR)
vpath	%.cxx $(COMMONDIR)
vpath	%.o   $(OBJDIR)

WIN32=@WIN32@
ifeq ($(WIN32),yes)

SRCS   += h264helper_win32.cxx
TARGET	= h264_video_pwplugin_helper.exe

else

SRCS   += h264helper_unix.cxx
TARGET	= h264_video_pwplugin_helper

endif # WIN32

SRCS += enc-ctx.cxx ../shared/h264frame.cxx



ifeq ($(VERBOSE),)
Q_CC = @echo [CC] `echo $< | sed s^$(OBJDIR)/^^` ;
Q_LD = @echo [LD] `echo $@ | sed s^$(OBJDIR)/^^` ;
endif

$(OBJDIR)/%.o : %.cxx
	@mkdir -p $(OBJDIR) >/dev/null 2>&1
	$(Q_CC)$(CXX) $(CFLAGS) -c $< -o $@

$(OBJDIR)/%.o : %.c
	@mkdir -p $(OBJDIR) >/dev/null 2>&1
	$(Q_CC)$(CC) $(CFLAGS) -c $< -o $@


OBJECTS = $(addprefix $(OBJDIR)/,$(patsubst %.c,%.o,$(patsubst %.cxx,%.o,$(notdir $(SRCS)))))

$(OBJDIR)/$(TARGET): $(OBJECTS)
	$(Q_LD)$(CXX) -o $@ $^ $(LDFLAGS)

install:
	mkdir -p $(DESTDIR)$(libdir)/$(VC_PLUGIN_DIR)
	install $(OBJDIR)/$(TARGET) $(DESTDIR)$(libdir)/$(VC_PLUGIN_DIR)

uninstall:
	rm -f $(DESTDIR)$(libdir)/$(VC_PLUGIN_DIR)/$(TARGET)

clean:
	rm -rf $(OBJDIR)

