PREFIX=@INSTALLPREFIX@
exec_prefix = ${PREFIX}
LIBDIR=@LIBDIR@

SONAME	= spandsp
STDCCFLAGS += -fPIC

SRCDIR	= .
OBJDIR	= ./obj

# CXXFLAGS += -DSPANDSP_VER3

CC		=@CC@
CXX		=@CXX@
LDSO		=@LDSO@
PLUGINEXT	=@PLUGINEXT@
STDCCFLAGS	=@STDCCFLAGS@
LDFLAGS		=@LDFLAGS@

SRCS		+= spandsp_fax.cpp spandsp_if.cpp
EXTRALIBS	+= -lspandsp

vpath	%.o $(OBJDIR)
vpath	%.cpp $(SRCDIR)
vpath	%.cpp spandsp_util

$(OBJDIR)/%.o : %.cpp
	@mkdir -p $(OBJDIR) >/dev/null 2>&1
	$(CXX) -I ../../../include $(STDCCFLAGS) $(OPTCCFLAGS) $(CFLAGS) -c $< -o $@

PLUGIN	= ./spandsp_fax_pwplugin.$(PLUGINEXT)

OBJECTS = $(addprefix $(OBJDIR)/,$(patsubst %.cpp,%.o,$(notdir $(SRCS))))

$(PLUGIN): $(OBJECTS)
	$(CC) $(LDSO) -o $@ $^ $(EXTRALIBS)

install:
	mkdir -p $(DESTDIR)$(LIBDIR)/pwlib/codecs/fax/
	cp $(PLUGIN) $(DESTDIR)$(LIBDIR)/pwlib/codecs/fax/

uninstall:
	rm -f $(DESTDIR)$(LIBDIR)/pwlib/codecs/fax/$(PLUGIN)

clean:
	rm -f $(OBJECTS) $(PLUGIN)

